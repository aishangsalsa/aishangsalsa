<!--salsaInfo.wxml-->
<view class="container" bindtouchstart='touchStart' bindtouchmove='touchMove' bindtouchend='touchEnd'>
  <view class="page-body drawer_box">   
    <image class="drawer-pic" src="{{pic5}}" mode="widthFix" bindload="finishLoadImg"></image>
    <video class="drawer-video" src="{{video_src}}" controls ></video>
    <image class="drawer-pic" src="{{pic8}}" mode="widthFix"></image>
    <view class="drawer-words" wx:if="{{showword}}">扫码加包子团长微信好友</view>
    <view class="drawer-words2" wx:if="{{showword}}">点击二维码打开，然后点击右上角的点点保存后扫码</view>
    <image class="drawer-qr" src="{{wechat_qr}}" mode="widthFix" data-src="{{wechat_qr}}" bindtap="previewImage"></image>
  </view>
</view>