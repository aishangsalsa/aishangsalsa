/* salsaInfo.wxss */
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fafafa;
  overflow-y: scroll;
}

.drawer_box {
  width: 100%;
  height: 100%;
  overflow: visible;
  top: 0;
  left: 0;
  background: #fafafa;
  padding: 20rpx 0 20rpx 0;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  margin: auto;
  border-radius: 10rpx;
}

.drawer-pic {
  width: 100%;
}

.drawer-words {
  padding: 40rpx 40rpx 10rpx 40rpx;
  text-align: center;
  font-weight: 700;
  font: 35rpx "microsoft yahei";
  color: orangered;
}

.drawer-words2 {
  padding: 0rpx 40rpx 10rpx 40rpx;
  text-align: center;
  font-weight: 500;
  font: 30rpx "microsoft yahei";
  color: orangered;
}

.drawer-qr {
  width: 450rpx;
  left: 0;
  margin: 0 150rpx 0 150rpx;
}

.mini-qr {
  width: 350rpx;
  left: 0;
  margin: 0 40rpx 0 360rpx;
}